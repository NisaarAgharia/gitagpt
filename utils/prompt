export const languages = ["Professional", "Casual", "Funny"] as const;

export type languageType = typeof languages [number];

export function generatePrompt(bio: string, language: languageType) {
  if (language === "Funny") {
    return `Generate 2 Bhagavad Gita verse with chapter number  and clearly labeled "1." and "2.". Make sure each generated upadesh is at max 20 words and base it on this context: ${bio}${
      bio.slice(-1) === "." ? "" : "."
    }`;
  }

  return `Generate 2 ${language} Bhagavad Gita verse with chapter number  and clearly labeled "1." and "2.". Make sure each generated upadesh is at least 14 words and at max 20 words and base them on this context: ${bio}${
    bio.slice(-1) === "." ? "" : "."
  }`;
}